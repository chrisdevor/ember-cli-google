<div class="map-controls">
  <div class="map-controls--location">
    <div>Latitude: {{input value=latInput}}</div>
    <div>Longitude: {{input value=lngInput}}</div>
  </div>


  {{#if showDirections}}
    <button {{action (mut showDirections) false}}>Hide Directions</button>
  {{else}}
    <button {{action (mut showDirections) true}}>Show Directions</button>
  {{/if}}
</div>

{{#g-map center=(hash lat=37.774546 lng=-122.433523) zoom=13 mapClick=(action "mapClick")}}
  {{g-circle center=(hash lat=37.774546 lng=-122.433523) radius=1000}}

  {{!-- Coachella, CA --}}
  {{g-rectangle bounds=(hash north=33.685 south=33.671 east=-116.234 west=-116.251)}}

  {{#g-custom-marker position=(hash lat=lat lng=lng) truck=truck}}
    {{#if showDirections}}
      {{g-directions direction="to" location='San Jose, CA' draggable=true}}
      {{g-directions direction="to" location='Sacramento, CA' suppressMarkers=true}}
    {{/if}}
  {{/g-custom-marker}}

  {{g-heatmap-layer data=heatMapData}}
{{/g-map}}